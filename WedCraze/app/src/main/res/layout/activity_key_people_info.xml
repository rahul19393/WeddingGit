<RelativeLayout android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
android:background="@color/regularTextColor">

    <include
        android:id="@+id/header"
        layout="@layout/app_header"/>

<ImageView
    android:id="@+id/selectedphoto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_below="@+id/header"
    android:layout_margin="@dimen/dp10"
    android:layout_above="@+id/details"/>

    <LinearLayout
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#808A8A8A"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp15">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Charlotte"
                android:layout_marginTop="@dimen/dp30"
                android:textSize="@dimen/sp15"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/relation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bridesnaid"
                android:textSize="@dimen/sp13"
                android:layout_marginTop="@dimen/dp5"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Charlotte is my best friend from college.We have gone through it all together!"
                android:textSize="@dimen/sp13"
                android:layout_marginTop="@dimen/dp15"
                android:layout_marginBottom="@dimen/dp30"
                android:textColor="@android:color/white"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>