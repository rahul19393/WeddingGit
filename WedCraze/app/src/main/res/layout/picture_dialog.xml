<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <TextView
        android:id="@+id/t"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share using..."
        android:textSize="@dimen/sp18"
        android:padding="@dimen/dp15"
        android:textColor="@color/textColorNormal"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingTop="20dp"
        android:paddingBottom="30dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:layout_below="@+id/t"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <LinearLayout
            android:id="@+id/fb_share_click"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/facebook_share_more"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/picturefbicon" />

            <TextView
                android:id="@+id/for_fb_share_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Facebook"
                android:textColor="#505050"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/twit_share_click"
            android:layout_width="46dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/twitter_picture"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/picturetwicon" />

            <TextView
                android:id="@+id/for_twitter_share_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Twitter"
                android:textColor="#505050"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linked_share_click"
            android:layout_width="58dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/youtube_share_more"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/linkedin"
                android:tint="@android:color/holo_blue_dark"/>

            <TextView
                android:id="@+id/for_youtube_share_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Linkedin"
                android:textColor="#505050"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>
    
    
</RelativeLayout>
