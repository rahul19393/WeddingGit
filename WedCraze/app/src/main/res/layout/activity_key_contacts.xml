<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <include
        android:id="@+id/header"
        layout="@layout/app_header"/>

    <TextView
        android:id="@+id/groupname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FRIENDS GROUP"
        android:layout_below="@+id/header"
        android:padding="@dimen/dp25"
        android:textSize="@dimen/sp20"
        android:textColor="@color/lightPinkColor"
        android:textStyle="bold|italic"
        android:layout_centerHorizontal="true"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/keycontactpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_above="@+id/pro_dots"
        android:layout_below="@+id/groupname"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/pro_dots"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp100"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center">

    </LinearLayout>

</RelativeLayout>
